.chat_middle__box
  .chat_middle__box__info
    .chat_middle__box__info_name
      = message.user.name
    .chat_middle__box__info_date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat_middle__box__message
    - if message.content.present?
      .chat_middle__box__message_content
        = message.content
    = image_tag message.image.url, class: 'chat_middle__box__message_image' if message.image.present?