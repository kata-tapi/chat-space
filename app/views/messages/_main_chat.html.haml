.chat_main

  .chat_main_top
    .chat_main_top__left
      .chat_main_top__left__group
        = @group.name
      %ul.chat_main_top__left__entrant
        Member:
        - @group.users.each do |user|
          %li.chat_main_top__left__entrant_users
            = user.name
    = link_to "Edit", edit_group_path(@group.id), class: "chat_main_top__right__exit_btn"

  .chat_middle
    = render @messages

  .chat_bottom
    = form_for [@group, @message] do |f|
      .chat_bottom_form
        = f.text_field :content, class: 'chat_bottom_form_text', placeholder: 'type a message'
        = f.label :image, class: 'chat_bottom_form_image' do
          = icon('far', 'image') 
          = f.file_field :image, class: 'none'  
      = f.submit 'Send', class: 'chat_bottom_submit'
